generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/myfinances?schema=public"
}

model Conta {
  codigo Int @id @default(autoincrement())
  conta String 
  saldo Float
  receitas Receita[]

  @@map("contas")
}

model Receita {
  codigo Int @id @default(autoincrement())
  valor Float
  data_inclusao DateTime @default(now())
  conta Conta @relation(fields: [conta_id], references: [codigo])
  conta_id Int
}